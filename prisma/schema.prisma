datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client"
  output          = "../src/generated/prisma"
  moduleFormat  = "cjs"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String   
  email     String   @unique
  role      Role   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  INTERN
  EMPLOYEE
  MANAGER
}